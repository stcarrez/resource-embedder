<package>

  <resource name='Bundle'>
    <!-- Bundle merge the 'bundle' and 'bunder-override' directories -->
    <install mode='bundle' source-timestamp='yes' strip-extension='yes'>
      <fileset dir="bundles">
        <include name="**/*.properties"/>
      </fileset>
      <fileset dir="bundles-override">
        <include name="**/*.properties"/>
      </fileset>
    </install>
  </resource>

</package>
